{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx",
        "src/components/common/chatInput/chatInput.jsx",
        "src/components/common/chatContainer/ChatContainer.component.jsx",
        "src/components/common/shareSocialPlatforms/shareSocialPlatforms.jsx",
        "src/components/common/chatInput/index.js"
    ],
    "exclude": ["node_modules"]
}
